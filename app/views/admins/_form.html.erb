<%= form_for(@user, url: admins_path(@user), html: {method: :post}) do |f| %>
  

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name%>
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <div class="field">
    <%= f.label :designation %>
    <%= f.text_field :designation %>
  </div>
  <div class="field">    
     <%= f.label :gender %>
     Male<%= f.radio_button :gender, "male" %>
     Female<%= f.radio_button :gender, "female" %>
  </div>
  <div class="field">
    <%= f.label :date_of_joining %>
    <%= f.text_field :date_of_joining %>
  </div>
  <div class="field">
    <%= f.label :date_of_birth %>
    <%= f.text_field :date_of_birth %>
  </div>
  <div class="field">
    <%= f.label :role_id %>
    <%= f.text_field :role_id %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
