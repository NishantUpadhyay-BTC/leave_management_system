<div class="centeralign-form">
  <div class="content">
    <div class="container">
      <div class="whitebg z-depth-1 register-form">
        <h5 class="center-align">Edit Employee</h5>
        <%= form_for(@user, url: admin_path(@user), html: {method: :put}) do |f| %>
          <div class="row">
            <div class="col s12">
              <div class="input-field">
                <%= f.text_field :name%>
                <%= f.label :name %>
              </div>
              <div class="input-field">
                <%= f.email_field :email %>
                <%= f.label :email %>
              </div>
              <div class="row">
                <div class="input-field col s6">
                  <%= f.text_field :designation %>
                  <%= f.label :designation %>
                </div>
                <div class="input-field col s6">
                  <%= f.label :date_of_joining %>
                  <%= f.text_field :date_of_joining, class: 'datepicker' %>
                </div>
                
              </div>              
            </div>
            <div class="col s12">
              <div class="row">
                <div class="input-field col s6">
                  <span class = 'radio-inline'>
                    <%= f.radio_button :gender, 'male' %>
                    <%= f.label :gender_male, 'Male' %>
                  </span>
                  <span class = 'radio-inline'>
                    <%= f.radio_button :gender, 'female' %>
                    <%= f.label :gender_female, 'Female' %>
                  </span> 
                </div>
                <div class="input-field col s6">
                  <%= f.label :date_of_birth %>
                  <%= f.text_field :date_of_birth, class: 'datepicker' %>
                </div>
              </div>
            </div>
          </div>      
          <div class="row">
            <div class="col s12">
              <%= button_tag(type: 'submit', class: 'btn blue') do %> Update <span class="fa fa-check"></span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script type= "text/javascript">
  LeaveManagementSystem.Common.bindDatePicker();
</script>
