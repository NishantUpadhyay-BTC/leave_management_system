<% if @holidays.present? %>
  <% @holidays.each do |holiday| %>
    <div class="col m4">
      <div class="holiday-box">
        <h5><%= holiday.description %></h5>
        <div class="date">
          <td><%= holiday.date %></td>
        </div>
        <div class="action">
          <%= link_to edit_holiday_path(holiday), class: 'btn-flat blue waves-effect waves-light',remote: true do %>
            <span class = 'fa fa-pencil'></span>
          <% end %>
          <%= link_to holiday_path(holiday), method: :delete, class: 'btn-flat red waves-effect waves-light', data: { confirm: 'Are you sure you want to delete this Holiday?' } do %>
            <span class = 'fa fa-trash'></span>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
