<% if @holidays.present? %>
  <% @holidays.each do |holiday| %>
    <tr>
      <td><%= holiday.date %></td>
      <td><%= holiday.description %></td>
      <td><%= link_to 'Edit', edit_holiday_path(holiday) %></td>
      <td><%= link_to 'Delete', holiday_path(holiday), method: :delete, data: { confirm: 'Are you sure you want to delete this holiday?' } %></td>
    </tr>
  <% end %>
<% end %>
