<% if @holidays.present? %>
  <% @holidays.each do |holiday| %>
    <%= holiday.date %>
    <%= holiday.description %>
    <%= link_to 'Show', holiday_path(holiday) %>
    <%= link_to 'Edit', edit_holiday_path(holiday) %>
    <%= link_to 'Delete', holiday_path(holiday), method: :delete, data: { confirm: 'Are you sure you want to delete this Holiday?' } %>
  <% end %>
<% end %>