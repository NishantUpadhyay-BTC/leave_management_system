<% if @leave_types.present? %>
  <% @leave_types.each do |leave_type| %>
    <%= leave_type.leave_type_name %>
    <%= leave_type.no_of_days %>
    <%= leave_type.description %>
    <%= link_to 'Show', leave_type_path(leave_type) %>
    <%= link_to 'Edit',  edit_leave_type_path(leave_type) %>
    <%= link_to 'Delete', leave_type_path(leave_type), method: :delete, data: { confirm: 'Are you sure you want to delete this leave type?' } %>
  <% end %>
<% end %>