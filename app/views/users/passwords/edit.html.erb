<div class = 'whitebg z-depth-1'>
  <h5 class="center-align">Change Password</h5>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.hidden_field :reset_password_token %>
    <div class="input-field">
      <%= f.label :password, "New password" %><br />
      <%= f.password_field :password, autofocus: true, autocomplete: "off" %>
    </div>
    <div class="input-field">
      <%= f.label :password_confirmation, "Confirm new password" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>
    <div class="row">
      <div class="col s8">
        <%= button_tag(type: 'submit', class: 'btn blue') do %> Change Password <span class="fa fa-sign-in"></span>
        <% end %>
      </div>
      <div class="col s4">
        <%= link_to "Login", new_user_session_path, class: 'btn-flat smallbtn' %>
      </div>
    </div>
  <% end %>
</div>