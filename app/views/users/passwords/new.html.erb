<div class = 'whitebg z-depth-1'>
  <h5 class="center-align">Forgot Password</h5>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <div class="input-field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true %>
    </div>
    <div class="row">
      <div class="col s8">
        <%= button_tag(type: 'submit', class: 'btn blue') do %> Reset Password <span class="fa fa-sign-in"></span>
        <% end %>
      </div>
      <div class="col s4">
        <%= link_to "Login", new_user_session_path, class: 'btn-flat smallbtn' %>
      </div>
    </div>
  <% end %>
</div>